// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
      "**/dist/**/*": true,
      "**/*.lock": true
    },
    "editor.tabSize": 2,
    "typescriptHero.codeOutline.enabled": true,
    "typescriptHero.resolver.multiLineWrapThreshold": 10,
    "typescriptHero.resolver.multiLineTrailingComma": true,
    "typescriptHero.resolver.organizeOnSave": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "tslint.enable": true,
    "tslint.configFile": "tslint.json",
    "typescript.useCodeSnippetsOnMethodSuggest": true,
    "typescriptHero.resolver.ignorePatterns": [
      "dist",
      "node_modules",
      "test",
      "index.ts"
    ],
    "tslint.packageManager": "yarn",
    "npm.packageManager": "yarn"
  }